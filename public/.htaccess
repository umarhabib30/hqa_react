# Enable URL rewriting for React Router SPA
RewriteEngine On
RewriteBase /

# Disable directory browsing
Options -Indexes

# Allow access to actual files and directories (images, CSS, JS, etc.)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# For actual directories, serve index.html if it exists (prevent 403)
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.html -f
RewriteRule ^ - [L]

# Serve index.html for all non-file requests (SPA routing)

# React Router will handle both cases client-side
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ index.html [L]

